---
// Hero.astro
import { Image } from 'astro:assets';

interface Props {
  image: ImageMetadata;
  height?: string;
  title?: string;
  subtitle?: string;
  description?: string;
  showButtons?: boolean;
}

const {
  image,
  height = `
  min-h-[calc(100svh-4rem)]
  sm:min-h-[calc(90svh-4rem)]
  lg:min-h-[70vh]
  max-h-[900px]
`,
  title = 'CARPENTRY & PROPERTY MAINTENANCE',
  subtitle = 'WELCOME TO D.RONAN CARPENTRY',
  description = 'Dedicated to quality and craftsmanship for three generations. Master carpentry, fine millwork, and historic windows. Serving Snohomish County, King County, and NW Washington.',
  showButtons = true,
} = Astro.props;
---

<section class="relative w-full">
  <!-- Background image -->
  <Image
    src={image}
    loading="eager"
    alt="Hero background"
    class={`absolute inset-0 ${height} w-full object-cover brightness-40`}
    quality="high"
  />

  <!-- Content -->

  <div
    class=`relative flex ${height} flex-col items-center justify-center px-4 text-center mt-20 text-white`
  >
    {
      subtitle && (
        <>
          <h2 class="font-[rufina] text-sm tracking-widest sm:text-base md:text-lg">{subtitle}</h2>
          <div class="mt-2 w-1/4 border-t-2 border-[#A38A6C]" />
        </>
      )
    }

    <h1 class="mt-4 font-[rufina] text-3xl leading-tight font-bold sm:text-4xl md:text-5xl">
      {title}
    </h1>

    {
      description && (
        <p class="mt-4 max-w-4xl text-sm leading-relaxed sm:text-base md:text-lg lg:text-xl">
          {description}
        </p>
      )
    }

    {
      showButtons && (
        <div class="mt-4 flex gap-8">
          <a
            href="/contact"
            class="text-md bg-[#1e67ce] hover:bg-[#134fa3] px-8 py-4 font-semibold text-white"
          >
            Contact Us
          </a>
          <a
            href="/services"
            class="text-md border-2 border-[#A38A6C] px-8 py-4 font-semibold text-white sm:text-base"
          >
            Services
          </a>
        </div>
      )
    }
  </div>
</section>
