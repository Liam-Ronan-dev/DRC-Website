---
import '../../assets/app.css';
import SiteLayout from '../../layouts/SiteLayout.astro';
import { projects } from '../../content/projects';
import { Image } from 'astro:assets';
import Hero from '../../components/Hero.astro';

import projectsImage from '../../images/projects.jpg'
import CTABanner from '../../components/CTABanner.astro';
---

<SiteLayout title="Our Projects">
  <Hero
    image={projectsImage}
    height="h-[60vh]"
    title="PROJECTS"
    subtitle=""
    description=""
    showButtons={false}
  />
  <section class="bg-[#1c1816] py-15">
    <div
      class="mx-auto grid max-w-7xl grid-cols-1 gap-8 px-4 sm:grid-cols-2 md:grid-cols-3 lg:px-8"
    >
      {
        projects.map((project) => (
          <a href={`/projects/${project.slug}`}>
            <Image
              src={project.image}
              alt={project.title}
              class="h-60 w-full object-cover"
            />
            <h2 class="mt-4 font-[rufina] text-2xl font-bold text-white">
              {project.title}
            </h2>
            <p class="mt-4 text-sm leading-relaxed text-white sm:text-base">
              {project.description}
            </p>
          </a>
        ))
      }
    </div>
  </section>

  <CTABanner />
</SiteLayout>
