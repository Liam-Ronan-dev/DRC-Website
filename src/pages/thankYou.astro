---
import SiteLayout from '../layouts/SiteLayout.astro';
import '../assets/app.css';
---

<SiteLayout title="Thank You Page">
  <section
    class="flex min-h-screen items-center justify-center bg-[#1c1816] px-4 text-center text-white"
  >
    <div class="max-w-xl">
      <h1 class="mb-4 font-[rufina] text-4xl font-bold">Thank You!</h1>
      <p class="mb-6 text-lg">
        Your message has been received. We'll get back to you as soon as
        possible—usually within 1–2 business days.
      </p>
      <div class="mt-8">
        <a
          href="/"
          class="bg-[#1e67ce] px-6 py-3 text-base font-semibold text-white"
        >
          Back to Home
        </a>
      </div>
    </div>
  </section>
</SiteLayout>
